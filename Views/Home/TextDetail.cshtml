@using AriBilgi.ArticleApp.Data.Entities
@model Article

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p></p>
<h2>@Model.Title</h2>
<p>@Model.Text</p>
<p>@Model.Author</p>
<p>@Model.dateTime</p>
<hr/>

<h3>Yorum Ekle</h3>
<form action="/Home/AddComment" method="post">
<div class="form-group">
    <textarea class="form-control" id="exampleFormControlTextarea1" name="CommentText" rows="3"></textarea>
    <textarea class="d-none" name="ArticleId">@Model.Id</textarea>

  </div>
  <button type="submit" class="btn btn-primary mt-2">Yorum Ekle</button>
  </form>
  <hr/>
  <h3>Yorumlar</h3>
  @foreach (Comment item in Model.comments)
  {
            <div class="card mt-3 mb-3">

              <div class="card-body">
                <blockquote class="blockquote mb-0">
                <p>@item.CommentText</p>
                  <footer class="blockquote-footer">@item.dateTime <cite title="Source Title"></cite></footer>
                </blockquote>
              </div>
            </div>
  }